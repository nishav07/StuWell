                                <i class="fa-solid fa-moon text-green-600 text-lg mt-1"></i>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-600 font-medium">Sleep Average</p>
                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.sleepAvg %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (aidata.weeklySummary.screenTimeAvg) { %>
                        <div class="bg-white/60 rounded-lg p-3">
                            <div class="flex items-start gap-3">
                                <i class="fa-solid fa-mobile-screen text-purple-600 text-lg mt-1"></i>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-600 font-medium">Screen Time</p>
                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.screenTimeAvg %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (aidata.weeklySummary.studyAvg) { %>
