<div class="mx-auto p-4 md:p-6">
  
    <div class="mb-6">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Insights</h1>
        <p class="text-gray-600 text-sm">Your last 7 days overview</p>
        <p class="text-gray-500 text-xs"><%= startDate %> - <%= endDate %></p>
    </div>


    <% if (!weekData || weekData.length === 0) { %>
        <div class="bg-yellow-100 rounded-xl p-6 text-center">
            <i class="fa-solid fa-chart-line text-4xl text-yellow-600 mb-3"></i>
            <h3 class="font-bold text-yellow-800 mb-2">No Data Available</h3>
            <p class="text-sm text-yellow-700">Start tracking your daily habits to see insights!</p>
        </div>
    <% } else { %>

    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 mb-6">
        
     
        <div class="bg-blue-200 rounded-2xl p-4 md:p-5 text-center">
            <i class="fa-solid fa-droplet text-2xl text-blue-800 mb-2"></i>
            <p class="text-2xl md:text-3xl font-bold text-gray-800"><%= avgWater.toFixed(1) %>L</p>
            <p class="text-xs text-gray-700">Avg Water</p>
        </div>

        
        <div class="bg-green-200 rounded-2xl p-4 md:p-5 text-center">
            <i class="fa-solid fa-moon text-2xl text-green-800 mb-2"></i>
            <p class="text-2xl md:text-3xl font-bold text-gray-800"><%= avgSleep.toFixed(1) %>h</p>
            <p class="text-xs text-gray-700">Avg Sleep</p>
        </div>


        <div class="bg-teal-200 rounded-2xl p-4 md:p-5 text-center">
            <i class="fa-solid fa-book-open text-2xl text-teal-800 mb-2"></i>
            <p class="text-2xl md:text-3xl font-bold text-gray-800"><%= avgStudy.toFixed(1) %>h</p>
            <p class="text-xs text-gray-700">Avg Study</p>
        </div>


        <div class="bg-purple-200 rounded-2xl p-4 md:p-5 text-center">
            <i class="fa-solid fa-mobile-screen text-2xl text-purple-800 mb-2"></i>
            <p class="text-2xl md:text-3xl font-bold text-gray-800"><%= avgScreen.toFixed(1) %>h</p>
            <p class="text-xs text-gray-700">Avg Screen</p>
        </div>
    </div>


    <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fa-solid fa-calendar-days text-teal-500"></i>
            Daily Breakdown
        </h2>

        <div class="space-y-3">
            <% weekData.forEach((day, index) => { %>
                <div class="border border-gray-200 rounded-xl p-4 hover:shadow-md transition">
                    <div class="flex justify-between items-center mb-3">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                                <span class="font-bold text-teal-700 text-sm">D<%= index + 1 %></span>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-800 text-sm"><%= new Date(day.date).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %></p>
                                <% if (day.status === 'submitted') { %>
                                    <span class="text-xs text-green-600 flex items-center gap-1">
                                        <i class="fa-solid fa-circle-check text"></i> Tracked
                                    </span>
                                <% } else { %>
                                    <span class="text-xs text-red-600 flex items-center gap-1">
                                        <i class="fa-solid fa-circle-xmark"></i> Missed
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <% if (day.status === 'submitted') { %>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-xs">
                            <div class="flex items-center gap-1">
                                <i class="fa-solid fa-droplet text-blue-500 text-xl"></i>
                                <span class="text-gray-700"><%= day.water %>L</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <i class="fa-solid fa-moon text-green-500 text-xl"></i>
                                <span class="text-gray-700"><%= day.sleepHr %>h</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <i class="fa-solid fa-book-open text-teal-500 text-xl"></i>
                                <span class="text-gray-700"><%= day.studyHr %>h</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <i class="fa-solid fa-mobile-screen text-purple-500 text-xl"></i>
                                <span class="text-gray-700"><%= day.screentime %>h</span>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-xs text-gray-400 italic">No data recorded</p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fa-solid fa-chart-line text-teal-500"></i>
            Consistency Metrics
        </h2>

      
        <div class="mb-4">
            <div class="flex justify-between items-center mb-2">
                <span class="text-sm text-gray-700">Tracking Consistency</span>
                <span class="text-sm font-bold text-teal-600"><%= submittedDays %>/7 days</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-teal-500 h-3 rounded-full transition-all" style="width: <%= (submittedDays/7*100).toFixed(0) %>%"></div>
            </div>
        </div>

        
        <div class="mb-4">
            <div class="flex justify-between items-center mb-2">
                <span class="text-sm text-gray-700">Junk Food Days</span>
                <span class="text-sm font-bold text-orange-600"><%= junkFoodDays %>/7 days</span>
            </div>
            <div class="flex gap-1">
                <% for(let i = 0; i < 7; i++) { %>
                    <% if (weekData[i] && weekData[i].junkFood === 'yes') { %>
                        <div class="flex-1 h-2 bg-orange-500 rounded"></div>
                    <% } else { %>
                        <div class="flex-1 h-2 bg-gray-200 rounded"></div>
                    <% } %>
                <% } %>
            </div>
        </div>

    
        <div class="bg-gradient-to-r from-blue-100 to-purple-100 rounded-lg p-4">
            <div class="flex items-center gap-3">
                <i class="fa-solid fa-face-smile text-2xl text-blue-600"></i>
                <div>
                    <p class="text-xs text-gray-600">Most Common Mood</p>
                    <p class="text-lg font-bold text-gray-800 capitalize"><%= mostCommonMood %></p>
                </div>
            </div>
        </div>
    </div>


    <div class="bg-gradient-to-r from-teal-100 to-green-100 rounded-2xl p-5 md:p-6 border-l-4 border-teal-500">
        <h2 class="text-lg font-bold text-gray-800 mb-3 flex items-center gap-2">
            <i class="fa-solid fa-lightbulb text-yellow-600"></i>
            Quick Insights
        </h2>
        
        <ul class="space-y-2 text-sm text-gray-700">
            <% if (avgWater < 2) { %>
                <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle text-xs text-red-500 mt-1"></i>
                    <span>Your water intake is below recommended levels. Try to increase to 2-3L daily.</span>
                </li>
            <% } %>
            
            <% if (avgSleep < 7) { %>
                <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle text-xs text-orange-500 mt-1"></i>
                    <span>You're averaging <%= avgSleep.toFixed(1) %> hours of sleep. Aim for 7-8 hours for better focus.</span>
                </li>
            <% } %>
            
            <% if (avgStudy >= 4) { %>
                <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle text-xs text-green-500 mt-1"></i>
                    <span>Excellent study consistency! Averaging <%= avgStudy.toFixed(1) %> hours per day.</span>
                </li>
            <% } %>
            
            <% if (junkFoodDays >= 3) { %>
                <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle text-xs text-red-500 mt-1"></i>
                    <span>Try to reduce junk food consumption. You had it <%= junkFoodDays %> days this week.</span>
                </li>
            <% } %>
            
            <% if (submittedDays === 7) { %>
                <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle text-xs text-teal-500 mt-1"></i>
                    <span>üéâ Perfect tracking! You logged all 7 days this week!</span>
                </li>
            <% } %>
        </ul>
    </div>

    <% } %>
     <div class="mt-6 text-center">
        <p class="text-xs text-gray-500">StuWell v1.0</p>
        <p class="text-xs text-gray-400">Made with ‚ù§Ô∏è by Nishav for students</p>
    </div>
    
</div>