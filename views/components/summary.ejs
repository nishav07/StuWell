                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.junkFoodFrequency %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (aidata.weeklySummary.moodTrend) { %>
                        <div class="bg-white/60 rounded-lg p-3">
                            <div class="flex items-start gap-3">
                                <i class="fa-solid fa-face-smile text-yellow-600 text-lg mt-1"></i>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-600 font-medium">Mood Trend</p>
                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.moodTrend %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (aidata.weeklySummary.routineStability) { %>
                        <div class="bg-white/60 rounded-lg p-3">
                            <div class="flex items-start gap-3">
                                <i class="fa-solid fa-calendar-check text-indigo-600 text-lg mt-1"></i>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-600 font-medium">Routine Stability</p>
                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.routineStability %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>

    
        <% if (aidata.routineImpact) { %>
            <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-heartbeat text-red-500"></i>
                    Routine Impact Analysis
                </h2>

                <div class="space-y-4">
                    <% if (aidata.routineImpact.shortTerm) { %>
                        <div class="border-l-4 border-orange-400 bg-orange-50 rounded-lg p-4">
                            <h3 class="font-semibold text-orange-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-clock"></i>
                                Short-Term Impact
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.routineImpact.shortTerm %></p>
                        </div>
                    <% } %>

                    <% if (aidata.routineImpact.longTerm) { %>
                        <div class="border-l-4 border-red-400 bg-red-50 rounded-lg p-4">
                            <h3 class="font-semibold text-red-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-calendar-days"></i>
                                Long-Term Impact
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.routineImpact.longTerm %></p>
                        </div>
                    <% } %>

                    <% if (aidata.routineImpact.focusAndEnergy) { %>
                        <div class="border-l-4 border-blue-400 bg-blue-50 rounded-lg p-4">
                            <h3 class="font-semibold text-blue-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-bolt"></i>
                                Focus & Energy
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.routineImpact.focusAndEnergy %></p>
                        </div>
                    <% } %>

                    <% if (aidata.routineImpact.physicalAndMentalLoad) { %>
                        <div class="border-l-4 border-purple-400 bg-purple-50 rounded-lg p-4">
                            <h3 class="font-semibold text-purple-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-brain"></i>
                                Physical & Mental Load
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.routineImpact.physicalAndMentalLoad %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>

  
        <% if (aidata.improvements) { %>
            <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-arrow-trend-up text-green-600"></i>
                    Personalized Improvements
                </h2>

                <div class="space-y-3">
                    <% if (aidata.improvements.water) { %>
                        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-lg p-4 border-l-4 border-blue-500">
                            <h3 class="font-semibold text-blue-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-droplet"></i>
                                Water Intake
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.water %></p>
                        </div>
                    <% } %>

                    <% if (aidata.improvements.sleep) { %>
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border-l-4 border-green-500">
                            <h3 class="font-semibold text-green-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-bed"></i>
                                Sleep
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.sleep %></p>
                        </div>
                    <% } %>

                    <% if (aidata.improvements.screenTime) { %>
                        <div class="bg-gradient-to-r from-purple-50 to-violet-50 rounded-lg p-4 border-l-4 border-purple-500">
                            <h3 class="font-semibold text-purple-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-mobile-screen"></i>
                                Screen Time
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.screenTime %></p>
                        </div>
                    <% } %>

                    <% if (aidata.improvements.food) { %>
                        <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-lg p-4 border-l-4 border-orange-500">
                            <h3 class="font-semibold text-orange-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-utensils"></i>
                                Food & Diet
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.food %></p>
                        </div>
                    <% } %>

                    <% if (aidata.improvements.study) { %>
                        <div class="bg-gradient-to-r from-teal-50 to-cyan-50 rounded-lg p-4 border-l-4 border-teal-500">
                            <h3 class="font-semibold text-teal-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-graduation-cap"></i>
                                Study Habits
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.study %></p>
                        </div>
                    <% } %>

                    <% if (aidata.improvements.mood) { %>
                        <div class="bg-gradient-to-r from-yellow-50 to-amber-50 rounded-lg p-4 border-l-4 border-yellow-500">
                            <h3 class="font-semibold text-yellow-800 mb-2 text-sm flex items-center gap-2">
                                <i class="fa-solid fa-face-smile"></i>
                                Mood Management
                            </h3>
                            <p class="text-sm text-gray-700 leading-relaxed"><%= aidata.improvements.mood %></p>
