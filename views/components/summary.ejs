
<% if (APIERR) { %>
     <div class="bg-yellow-100 rounded-xl p-6 text-center">
            <i class="fa-solid fa-robot text-4xl text-yellow-600 mb-3"></i>
            <h3 class="font-bold text-yellow-800 mb-2">No AI Analysis Available</h3>
            <p class="text-sm text-yellow-700">TRY AGAIN</p>
        </div>
 
<% } else { %>



<div class=" mx-auto p-4 md:p-6">

     <div class="mb-6">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">AI Analysis Report</h1>
        <p class="text-gray-600 text-sm">Weekly insights powered by AI</p>
        <% if (aidata && aidata.weekStart && aidata.weekEnd) { %>
            <p class="text-gray-500 text-xs"><%= aidata.weekStart %> - <%= aidata.weekEnd %></p>
        <% } %>
    </div>

    <!--  //////////////////////////////////////////////////////////////////////////////////// -->

        <% if (aidata.progress) { %>
            <div class="grid md:grid-cols-2 gap-4 mb-4">
                <!-- Good Progress -->
                <% if (aidata.progress.good && aidata.progress.good.length > 0) { %>
                    <div class="bg-gradient-to-br from-green-100 to-green-200 rounded-2xl shadow-md p-5 border-l-4 border-green-600">
                        <h3 class="font-bold text-green-800 mb-3 text-base flex items-center gap-2">
                            <i class="fa-solid fa-circle-check text-xl"></i>
                            What's Going Well
                        </h3>
                        <div class="space-y-2">
                            <% aidata.progress.good.forEach(item => { %>
                                <p class="text-sm text-gray-800 leading-relaxed"><%= item %></p>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                
                <% if (aidata.progress.bad && aidata.progress.bad.length > 0) { %>
                    <div class="bg-gradient-to-br from-red-100 to-red-200 rounded-2xl shadow-md p-5 border-l-4 border-red-600">
                        <h3 class="font-bold text-red-800 mb-3 text-base flex items-center gap-2">
                            <i class="fa-solid fa-triangle-exclamation text-xl"></i>
                            Areas of Concern
                        </h3>
                        <div class="space-y-2">
                            <% aidata.progress.bad.forEach(item => { %>
                                <p class="text-sm text-gray-800 leading-relaxed"><%= item %></p>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>

        
        <% if (aidata.riskAssessment) { %>
            <div class="rounded-2xl shadow-md p-5 md:p-6 mb-4 
                <% if (aidata.riskAssessment.level === 'high') { %>
                    bg-gradient-to-r from-red-100 to-red-200 border-l-4 border-red-600
                <% } else if (aidata.riskAssessment.level === 'moderate') { %>
                    bg-gradient-to-r from-yellow-100 to-orange-200 border-l-4 border-orange-600
                <% } else { %>
                    bg-gradient-to-r from-green-100 to-green-200 border-l-4 border-green-600
                <% } %>">
                
                <h2 class="text-xl font-bold mb-4 flex items-center gap-2
                    <% if (aidata.riskAssessment.level === 'high') { %>
                        text-red-800
                    <% } else if (aidata.riskAssessment.level === 'moderate') { %>
                        text-orange-800
                    <% } else { %>
                        text-green-800
                    <% } %>">
                    <i class="fa-solid fa-shield-halved"></i>
                    Risk Assessment
                </h2>

                <div class="space-y-3">
                    <% if (aidata.riskAssessment.level) { %>
                        <div class="bg-white/70 rounded-lg p-4">
                            <p class="text-xs font-medium text-gray-600 mb-1">Risk Level</p>
                            <p class="text-lg font-bold uppercase
                                <% if (aidata.riskAssessment.level === 'high') { %>
                                    text-red-700
                                <% } else if (aidata.riskAssessment.level === 'moderate') { %>
                                    text-orange-700
                                <% } else { %>
                                    text-green-700
                                <% } %>">
                                <%= aidata.riskAssessment.level %>
                            </p>
                        </div>
                    <% } %>

                    <% if (aidata.riskAssessment.reason) { %>
                        <div class="bg-white/70 rounded-lg p-4">
                            <p class="text-xs font-medium text-gray-600 mb-2">Reason</p>
                            <p class="text-sm text-gray-800 leading-relaxed"><%= aidata.riskAssessment.reason %></p>
                        </div>
                    <% } %>

                    <% if (aidata.riskAssessment.ifContinued) { %>
                        <div class="bg-white/70 rounded-lg p-4">
                            <p class="text-xs font-medium text-gray-600 mb-2">If Continued</p>
                            <p class="text-sm text-gray-800 leading-relaxed"><%= aidata.riskAssessment.ifContinued %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>


        <!--  //////////////////////////////////////////////////////////////////////////////////// -->


    
   
   

   
    <% if (!aidata) { %>
        <div class="bg-yellow-100 rounded-xl p-6 text-center">
            <i class="fa-solid fa-robot text-4xl text-yellow-600 mb-3"></i>
            <h3 class="font-bold text-yellow-800 mb-2">No AI Analysis Available</h3>
            <p class="text-sm text-yellow-700">Track at least 5 days to get AI-powered insights!</p>
        </div>
    <% } else { %>

  
        <% if (aidata.weeklySummary) { %>
            <div class="bg-gradient-to-r from-teal-100 to-blue-100 rounded-2xl shadow-md p-5 md:p-6 mb-4 border-l-4 border-teal-500">
