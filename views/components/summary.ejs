                                <i class="fa-solid fa-droplet text-blue-600 text-lg mt-1"></i>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-600 font-medium">Water Intake</p>
                                    <p class="text-sm text-gray-800"><%= aidata.weeklySummary.waterAvg %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (aidata.weeklySummary.sleepAvg) { %>
                        <div class="bg-white/60 rounded-lg p-3">
