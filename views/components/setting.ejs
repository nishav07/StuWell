<div class=" mx-auto p-4 md:p-6">
    <div class="mb-6">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Settings</h1>
        <p class="text-gray-600 text-sm">Manage your profile and preferences</p>
    </div>


    <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
        <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 md:w-20 md:h-20 bg-teal-500 rounded-full flex items-center justify-center">
                <i class="fa-solid fa-user text-3xl md:text-4xl text-white"></i>
            </div>
            <div>
                <h2 class="text-xl md:text-2xl font-bold text-gray-800"><%= user.userName %></h2>
                <p class="text-sm text-gray-600"><%= user.email %></p>
            </div>
        </div>

     
        <% if (user.isProfileOk) { %>
            <div class="bg-green-100 rounded-lg px-4 py-2 inline-flex items-center gap-2">
                <i class="fa-solid fa-circle-check text-green-600"></i>
                <span class="text-sm text-green-700 font-medium">Profile Complete</span>
            </div>
        <% } else { %>
            <div class="bg-orange-100 rounded-lg px-4 py-2 inline-flex items-center gap-2">
                <i class="fa-solid fa-circle-exclamation text-orange-600"></i>
                <span class="text-sm text-orange-700 font-medium">Profile Incomplete</span>
            </div>
        <% } %>
    </div>

    <div class="bg-white rounded-2xl shadow-md p-5 md:p-6 mb-4">
        <h3 class="text-lg md:text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fa-solid fa-id-card text-teal-500"></i>
            Personal Information
        </h3>

        <div class="space-y-4">
           
            <div class="flex justify-between items-center border-b border-gray-200 pb-3">
                <div>
                    <p class="text-xs text-gray-500">Username</p>
                    <p class="text-sm md:text-base font-medium text-gray-800"><%= user.userName %></p>
                </div>
                <i class="fa-solid fa-user text-gray-400"></i>
            </div>

           
            <div class="flex justify-between items-center border-b border-gray-200 pb-3">
                <div>
                    <p class="text-xs text-gray-500">Email</p>
                    <p class="text-sm md:text-base font-medium text-gray-800"><%= user.email %></p>
                </div>
                <i class="fa-solid fa-envelope text-gray-400"></i>
            </div>

        
            <div class="flex justify-between items-center border-b border-gray-200 pb-3">
                <div>
                    <p class="text-xs text-gray-500">Date of Birth</p>
                    <p class="text-sm md:text-base font-medium text-gray-800">
                        <% if (user.DOB) { %>
                            <%= new Date(user.DOB).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                        <% } else { %>
                            <span class="text-gray-400">Not set</span>
                        <% } %>
                    </p>
                </div>
                <i class="fa-solid fa-calendar text-gray-400"></i>
            </div>

           
            <div class="flex justify-between items-center border-b border-gray-200 pb-3">
                <div>
                    <p class="text-xs text-gray-500">Gender</p>
                    <p class="text-sm md:text-base font-medium text-gray-800 capitalize">
                        <% if (user.gender) { %>
                            <%= user.gender %>
                        <% } else { %>
                            <span class="text-gray-400">Not set</span>
                        <% } %>
                    </p>
                </div>
                <i class="fa-solid fa-venus-mars text-gray-400"></i>
            </div>

            
            <div class="flex justify-between items-center border-b border-gray-200 pb-3">
                <div>
                    <p class="text-xs text-gray-500">Weight</p>
                    <p class="text-sm md:text-base font-medium text-gray-800">
                        <% if (user.weight) { %>
                            <%= user.weight %> kg
                        <% } else { %>
                            <span class="text-gray-400">Not set</span>
                        <% } %>
                    </p>
                </div>
                <i class="fa-solid fa-weight-scale text-gray-400"></i>
            </div>

          
            <div class="flex justify-between items-center pb-3">
                <div>
                    <p class="text-xs text-gray-500">Academic Level</p>
                    <p class="text-sm md:text-base font-medium text-gray-800">
                        <% if (user.academic) { %>
                            <%= user.academic %>
                        <% } else { %>
                            <span class="text-gray-400">Not set</span>
                        <% } %>
                    </p>
                </div>
                <i class="fa-solid fa-graduation-cap text-gray-400"></i>
            </div>
        </div>
    </div>


    <div class="space-y-3">
        
        <button onclick="editProfile()" class="w-full bg-teal-500 hover:bg-teal-600 text-white font-semibold py-3 rounded-xl transition flex items-center justify-center gap-2">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit Profile (comming soon)
        </button>

    
        <button onclick="changePassword()" class="w-full bg-amber-500 hover:bg-amber-600 text-white font-semibold py-3 rounded-xl transition flex items-center justify-center gap-2">
            <i class="fa-solid fa-key"></i>
            Change Password (comming soon)
        </button>

   
        <form action="/logout" method="POST">
            <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 rounded-xl transition flex items-center justify-center gap-2">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                Logout
            </button>
        </form>
    </div>

  
    <div class="mt-6 text-center">
        <p class="text-xs text-gray-500">StuWell v1.0</p>
        <p class="text-xs text-gray-400">Made with ❤️ by Nishav for students</p>
    </div>
</div>

